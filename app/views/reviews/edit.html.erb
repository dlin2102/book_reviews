<div class="col-md-6 col-md-offset-3">
<h1>Edit Review</h1>

<%= simple_form_for([@book, @review]) do |f|%>
<div id="rating-form">
<label>Rating</label>
</div>
  <%= f.input :comment %>
  <%= f.button :submit %>
<%end%>
</div>

<script>
// Move this to app/assets/javascripts
$('#rating-form').raty({
  path: '/assets',
  scoreName: 'review[rating]'
});
</script>
