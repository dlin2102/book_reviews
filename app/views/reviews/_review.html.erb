<div class="col-md-12">
<div class="review-rating" data-score="<%=review.rating%>"></div>
<br/>
<p>By <%=review.user.email%></p>
<p><%= review.comment %></p>

<div class ="reviewdiv">
<% if user_signed_in?%>
<% if review.user_id == current_user.id %>
<button><%=link_to "Edit", edit_book_review_path(review.book, review)%></button>
<button><%=link_to "Delete", book_review_path(review.book, review), method: :delete, data: {confirm: "Are you sure?"}%></button>
<% end %>
<% end %>
</div>
</div>
