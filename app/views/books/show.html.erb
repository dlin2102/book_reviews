<%= link_to "Back", books_path %>
<h1><%=@book.title%></h1>
<br/>
<h2><%=@book.author%></h2>
<br/>
<p><%=@book.description%></p>

<% if user_signed_in? %>
<% if @book.user_id == current_user.id %>
<%=link_to "Edit Book", edit_book_path(@book)%>
<%=link_to "Delete Book", book_path(@book), method: :delete, data: {confirm: "Are you sure?"}%>
<% end %>
<% end %>
